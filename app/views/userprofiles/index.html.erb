<div class="page-header"></div>
  <h1>プロフィール一覧</h1>
</div>
<br />

<div class="panel panel-default">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th>名前</th>
      <th>血液型</th>
      <th>誕生日</th>	
      <th>住所</th>
      <th colspan="4"></th>
    </tr>
    </thead>
  
    <!-- 登録情報を一覧表示 -->
    <tbody>
      <% i = 1 %>
      <% @userprofiles.each do |userprofile| %>
        <tr>
        <td><div class="text-left"><%= userprofile.name %></div></td>
        <td><div class="text-left"><%= userprofile.bloodtype %></div></td>
        <td><div class="text-left">
          <% if userprofile.birthday %>
            <%= userprofile.birthday.strftime("%Y/%m/%d") %>
          <% else %>
            <%= " " %>
          <% end %>
        </div></td>
        <td><div class="text-left"><%= userprofile.address.slice(0, 20) %></div></td>
        
        <!-- 以下は要修正 -->
        <td><%= link_to '参照', userprofile %></td>
        <td><%= link_to '更新', edit_userprofile_path(userprofile) %></td>
        <td><%= link_to '削除', userprofile, method: :delete, data: { confirm: '削除しますがよろしいですか?' } %></td>
        <% i += 1 %>
        </tr>
      <% end %>
    </tbody>
    
  </table>
</div>
<%= link_to 'プロフィール新規作成', new_userprofile_path %>
  <br />
  <%= paginate @userprofiles %>
