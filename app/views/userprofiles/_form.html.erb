<%= form_for(@userprofile, html: {multipart: true}, class: 'form-horizontal', role: 'form') do |f| %>

  <% if @userprofile.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @userprofile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <!-- [非表示] ユーザID -->
  <div class="form-group">
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>
  
  <div class="panel panel-primary">
    <div class="panel-heading">
      <div class="text-left">
        名前
      </div>
    </div>
    <div class="panel-body">
      <div class="text-left">
        <%= current_user.name %>
      </div>
    </div>
  </div>
  <%= f.hidden_field :name, value: current_user.name %>
  
  <div class="form-group">
    <div class="text-left">
      <%= f.label "写真", class: "col-sm-1 control-label" %>
    </div>
    <%= f.file_field :uploaded_picture, class:'form-control' %><br />
  </div>
  
  <div class="form-group">
    <div class="text-left">
      <%= f.label "血液型", class: "col-sm-1 control-label" %><br />
    </div>
    <br />
    <div class="text-left">
      <div class="radio-inline">
        <label><%= f.radio_button :bloodtype, 'A型', class: :blood %> A型 </label>
      </div>
      <div class="radio-inline">
        <label><%= f.radio_button :bloodtype, 'B型', class: :blood %> B型 </label>
      </div>
      <div class="radio-inline">
        <label><%= f.radio_button :bloodtype, 'O型', class: :blood %> O型 </label>
      </div>
      <div class="radio-inline">
        <label><%= f.radio_button :bloodtype, 'AB型', class: :blood %> AB型 </label>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="text-left">
      <%= f.label "生年月日", class: "col-sm-1 control-label" %>
    </div>
    <div class: "col-sm-10">
      <%= f.date_field :birthday, class:'form-control' %>
    </div>
  </div>
  
  <div class="form-group">
    <div class="text-left">
      <%= f.label "住所", class: "col-sm-1 control-label" %>
    </div>
    <%= f.text_field :address, class:'form-control' %>
  </div>
  
  <%= f.submit '登録', class: 'btn btn-primary btn-sm', data: { disable_with: '登録中…' } %>
<% end %>