<h1>登録ユーザ一覧</h1>

<table bgcolor="#ffffff" border="1" width=75% %>
	
  <thead>
    <tr>
      <th>名前</th>
      <th>Email</th>
      <th>パスワード</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <!-- 登録情報を一覧表示 -->
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.passwd %></td>
        
        <!-- 以下は要修正 -->
        <td><%= link_to '参照', user %></td>
        <td><%= link_to '更新', edit_user_path(user) %></td>
        <td><%= link_to '削除', user, method: :delete, data: { confirm: '削除しますがよろしいですか?' } %></td>
        
      </tr>
    <% end %>
  </tbody>
  
</table>
